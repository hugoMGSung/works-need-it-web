@model IEnumerable<BoardWebApp.Models.ProfileModel>;
@{
	ViewData["Title"] = "Home Page";
}

<partial name="_Notification" />

<!-- Header-->
<header class="masthead text-center text-white">
	<div class="masthead-content">
		<div class="container px-5">
			<h1 class="masthead-heading mb-0">One Page Wonder</h1>
			<h2 class="masthead-subheading mb-0">Will Rock Your Socks Off</h2>
			<a class="btn btn-primary btn-xl rounded-pill mt-5" href="#scroll">Learn More</a>
		</div>
	</div>
	<div class="bg-circle-1 bg-circle"></div>
	<div class="bg-circle-2 bg-circle"></div>
	<div class="bg-circle-3 bg-circle"></div>
	<div class="bg-circle-4 bg-circle"></div>
</header>

<section id="scroll">
	<div class="container px-5">
		<div class="row gx-5 align-items-center">
			<div class="col-lg-6 order-lg-2">
				<div class="p-5"><img class="img-fluid rounded-circle" src="/Uploads/@Model.FirstOrDefault(x => x.Division == "Card1").FileName" alt="..." /></div>
			</div>
			<div class="col-lg-6 order-lg-1">
				<div class="p-5">
					<h2 class="display-4">@Model.FirstOrDefault(x => x.Division == "Card1").Title</h2>
					<p>@Html.Raw(Model.FirstOrDefault(x => x.Division == "Card1").Description)</p>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Content section 2-->
<section>
	<div class="container px-5">
		<div class="row gx-5 align-items-center">
			<div class="col-lg-6">
				<div class="p-5"><img class="img-fluid rounded-circle" src="/Uploads/@Model.FirstOrDefault(x => x.Division == "Card2").FileName" alt="..." /></div>
			</div>
			<div class="col-lg-6">
				<div class="p-5">
					<h2 class="display-4">@Model.FirstOrDefault(x => x.Division == "Card2").Title</h2>
					<p>@Html.Raw(Model.FirstOrDefault(x => x.Division == "Card2").Description)</p>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Content section 3-->
<section>
	<div class="container px-5">
		<div class="row gx-5 align-items-center">
			<div class="col-lg-6 order-lg-2">
				<div class="p-5"><img class="img-fluid rounded-circle" src="/Uploads/@Model.FirstOrDefault(x => x.Division == "Card3").FileName" alt="..." /></div>
			</div>
			<div class="col-lg-6 order-lg-1">
				<div class="p-5">
					<h2 class="display-4">@Model.FirstOrDefault(x => x.Division == "Card3").Title</h2>
					<p>@Html.Raw(Model.FirstOrDefault(x => x.Division == "Card3").Description)</p>
				</div>
			</div>
		</div>
	</div>
	<div class="container px-5">
		<div class="row gx-5 align-items-center">
			<div class="col-lg">
			</div>
		</div>
	</div>
</section>